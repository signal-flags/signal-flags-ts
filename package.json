{
	"name": "signal-flags",
	"version": "4.1.0",
	"description": "Generate SVG for flags from the International Code of Signals and Racing Rules of Sailing.",
	"keywords": [
		"flags",
		"sailing",
		"rrs",
		"code flags",
		"signal flags"
	],
	"author": "Signal Flags (https://signalflags.org/)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/signal-flags/signal-flags-ts.git"
	},
	"bugs": {
		"url": "https://github.com/signal-flags/signal-flags/issues"
	},
	"homepage": "https://github.com/signal-flags/signal-flags-ts",
	"type": "module",
	"browser": "./dist/signal-flags.iife.js",
	"exports": {
		".": "./dist/signal-flags.js"
	},
	"types": "./dist/signal-flags.d.ts",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"fix": "prettier . --write && eslint . --fix",
		"check": "prettier . --check && eslint .",
		"dev": "vite --config vite.config.dev.js",
		"build": "npm run build:vite && npm run build:types",
		"build:vite": "vite build",
		"build:types": "rimraf types && tsc -p tsconfig.types.json",
		"test": "vitest run --reporter=verbose",
		"test:ci": "vitest run --reporter=verbose",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"@eslint/js": "^9.35.0",
		"@eslint/json": "^0.13.2",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.4.0",
		"@vitest/eslint-plugin": "^1.3.9",
		"eslint": "^9.35.0",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0",
		"vite": "^7.1.2",
		"vitest": "^3.2.4"
	}
}
